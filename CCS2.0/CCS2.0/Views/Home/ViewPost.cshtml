@model IEnumerable<ImageUpload.Models.ImageModel>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.School_Year_Begin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.School_Year_End)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teacher_Name)
            </th>
            <th>
                Image
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.School_Year_Begin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.School_Year_End)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Grade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Teacher_Name)
                </td>
                <td>
                    <img src="@item.src" width="auto" height="50%" alt="Unknown Image" />
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { ID = item.Id }) |
                    @Html.ActionLink("Delete", "DeleteImage", new { ID = item.Id }, new { onclick = "return confirm ( 'Are you sure?');" })
                </td>
            </tr>
        }
    </tbody>
</table>
