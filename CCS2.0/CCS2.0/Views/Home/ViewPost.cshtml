@model IEnumerable<ImageUpload.Models.ImageModel>




<div class="container-fluid">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6">
                <div class="card">
                    <h5 class="card-header" style="text-align:center">
                        @Html.DisplayFor(modelItem => item.School_Year_Begin) - @Html.DisplayFor(modelItem => item.School_Year_End)
                    </h5>
                    <div class="card-body">
                        <p class="card-text">
                            <img src="@item.src" style="width: 100%; height: auto" alt="Unknown Image" class="center" />
                        </p>
                    </div>
                    <div class="card-footer" style="text-align:center">
                        @Html.DisplayFor(modelItem => item.Teacher_Name)
                    </div>
                </div>

            </div>


            <div class="col-md-6">
                <h3>
                    Comments
                </h3>

                @if (false)
                { 
                    <nav class="navbar navbar-expand-lg navbar-light bg-light">

                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                            <ul class="navbar-nav">
                                <li class="nav-item active">
                                    <a class="nav-link" href="#">Link <span class="sr-only">(current)</span></a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Link</a>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="http://example.com" id="navbarDropdownMenuLink" data-toggle="dropdown">Dropdown link</a>
                                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                        <a class="dropdown-item" href="#">Action</a> <a class="dropdown-item" href="#">Another action</a> <a class="dropdown-item" href="#">Something else here</a>
                                        <div class="dropdown-divider">
                                        </div> <a class="dropdown-item" href="#">Separated link</a>
                                    </div>
                                </li>
                            </ul>
                            <form class="form-inline">
                                <input class="form-control mr-sm-2" type="text" />
                                <button class="btn btn-primary my-2 my-sm-0" type="submit">
                                    Search
                                </button>
                            </form>
                            <ul class="navbar-nav ml-md-auto">
                                <li class="nav-item active">
                                    <a class="nav-link" href="#">Link <span class="sr-only">(current)</span></a>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="http://example.com" id="navbarDropdownMenuLink" data-toggle="dropdown">Dropdown link</a>
                                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                                        <a class="dropdown-item" href="#">Action</a> <a class="dropdown-item" href="#">Another action</a> <a class="dropdown-item" href="#">Something else here</a>
                                        <div class="dropdown-divider">
                                        </div> <a class="dropdown-item" href="#">Separated link</a>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </nav>
                }
                <table class="table table-striped">
                    @if (true)
                    {
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th>
                                    Comment
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Date
                                </th>
                            </tr>
                        </thead>
                    }
                    else
                    {
                        <tr>
                            <td>
                                There aren't any comments yet... Be the first to comment!
                            </td>
                        </tr>
                    }


                    <tbody>
                        @foreach (var com in item.CommentModel)
                        {
                            <tr>
                                <td>
                                    1
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => com.Comment)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => com.Name)
                                </td>
                                <td>
                                    01/04/2012
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            
            
                <button type="button" class="btn btn-outline-primary">
                    @Html.ActionLink("New Comment", "NewComment", new { Id = item.Id })
                </button>
            </div>
        }
    </div>
</div>

