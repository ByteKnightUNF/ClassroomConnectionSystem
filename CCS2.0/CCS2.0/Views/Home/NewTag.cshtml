@model ImageUpload.Models.AddingTagModel

<h4>AddingTagModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="NewTag">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="number" name="Photo_id" hidden value="@ViewBag.Photo_id">
            </div>
            <div class="form-group">
                <input type="number" name="Tag" hidden value="@ViewBag.Tag">
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<div>
    @Html.ActionLink("Cancel", "ViewPost", new { Id = @ViewBag.ImageId })
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
