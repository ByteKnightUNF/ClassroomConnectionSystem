@model ImageUpload.Models.CommentModel

@{
    ViewData["Title"] = "New Comment";
}

<h1>New Comment</h1>

<h4>Comment Model</h4>
<hr />
<div class="row">
    <div class="col-md-4">
            <form asp-action="NewComment">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Comment" class="control-label"></label>
                    <input asp-for="Comment" class="form-control" />
                    <span asp-validation-for="Comment" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="number" name="Flag" hidden value="0">
                </div>
                <div class="form-group">
                    <input type="number" name="ImageId" hidden value="@ViewBag.ImageId">
                </div>
                <div class="form-group">
                    <input type="submit" value="Post Comment" class="btn btn-primary" />
                </div>
            </form>
    </div>
</div>

<div>
    @Html.ActionLink("Cancel", "ViewPost", new { Id = @ViewBag.ImageId })
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
