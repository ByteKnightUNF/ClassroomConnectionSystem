@model CCS2._0.Models.GalleryModel

<h4>GalleryModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("ImageGallery", "Image", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {

            <form asp-action="Tag">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label class="control-label">Upload Image for Gallery</label>
                    <input type="file" id="ImageFile" name="ImageFile" accept="image/*" required />
                </div>


                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        }

    </div>
</div>

<div>
    <a asp-action="ViewImage">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
