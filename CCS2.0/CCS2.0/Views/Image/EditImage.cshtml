@model ImageUpload.Models.ImageModel

@{
    ViewData["Title"] = "EditImage";

}


<p>@Html.ActionLink("<Back", "index", "home") </p>
<h4>Edit Image</h4>
<hr />
<div class="row">
    <img class="card-img-top mx-auto" style="height:50%; width:50%;" src="@Model.src" alt="Unknown Image" />
    <div class="col-md-4">
        @using (Html.BeginForm("EditImage", "image", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {

        <form asp-action="EditImage">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SchoolYearBegin" class="control-label"></label>
                <input asp-for="SchoolYearBegin" class="form-control" />
                <span asp-validation-for="SchoolYearBegin" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Grade" class="control-label"></label>
                <input asp-for="Grade" class="form-control" />
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TeacherName" class="control-label"></label>
                <input asp-for="TeacherName" class="form-control" />
                <span asp-validation-for="TeacherName" class="text-danger"></span>
            </div>

            <input type="number" name="ImageId" hidden value="@Model.ImageId">
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <button type="button" class="btn btn-secondary" onclick="window.location.href='/image/ViewImage'">Cancel</button>
            </div>

        </form>
        }
    </div>
</div>

<div>
    <a asp-action="ViewImage">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
