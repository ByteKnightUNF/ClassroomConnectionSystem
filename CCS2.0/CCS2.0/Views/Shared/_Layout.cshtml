@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Friends of Dinsmore Elementary CCS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <style>
        a {
            color: black;
            text-decoration: none;
            background-color: none;
        }
    </style>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                @if (SignInManager.IsSignedIn(User))
                {
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="/Images/Dinsmore-Logo.png" width="auto" height="50%" alt="Dinsmore Logo" />
                    </a>
                    <a class="home-link" asp-controller="Home" asp-action="Index" title="Friends of Dinsmore Elementary, Inc." rel="home">
                        <div class="site-description">
                            <h4 class="site-title ">Friends of Dinsmore Elementary, Inc.</h4>
                            <p class="site-tagline">501(c)(3) charitable organization</p>
                        </div>
                    </a>

             


                }
                else
                {
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="/Images/Dinsmore-Logo.png" width="auto" height="50%" alt="Dinsmore Logo" />

                    </a>
                    <a class="home-link" asp-controller="Home" asp-action="Index" rel="home">
                        <div class="site-description">
                            <h4 class="site-title ">Friends of Dinsmore Elementary, Inc.</h4>
                            <p class="site-tagline">501(c)(3) charitable organization</p>
                        </div>
                    </a>



               


                }

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>


                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">


                    @if (SignInManager.IsSignedIn(User))
                    {
                        <partial name="_LoginPartial" />

                        <ul class="navbar-nav flex-grow-1">
                        </ul>
                    }

                </div>


            </div>
        </nav>
    </header>
    <div class="container" style="margin-bottom:80px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - Classroom Connection System
            <a href="/identity/account/login">Admin login</a>
            <a style="float:right;" href="mailto:FriendsOfDinsmoreElementary@gmail.com">Contact Email</a>
          
        </div>
       

    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
